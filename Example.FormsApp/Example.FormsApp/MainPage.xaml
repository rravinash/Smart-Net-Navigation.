<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Example.FormsApp"
             xmlns:navigation="clr-namespace:Smart.Navigation;assembly=Smart.Navigation.Forms"
             xmlns:resolver="clr-namespace:Smart.Forms.Resolver;assembly=Smart.Forms"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type local:MainPageViewModel}}"
             resolver:BindingContextResolver.Type="{x:Type local:MainPageViewModel}"
             x:Class="Example.FormsApp.MainPage">
    <StackLayout>
        <Label Text="{Binding Source={x:Reference Container}, Mode=OneWay, Path=Content, Converter={StaticResource ViewTitleConverter}}"
               VerticalOptions="Center" HorizontalOptions="Center"
               BackgroundColor="{StaticResource MetroBlue}" />
        <ContentView x:Name="Container" BackgroundColor="Green">
            <ContentView.Behaviors>
                <navigation:NavigationContainerBehavior Navigator="{Binding Navigator}" />
            </ContentView.Behaviors>
        </ContentView>
    </StackLayout>
</ContentPage>
