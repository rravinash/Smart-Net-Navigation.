<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Class="Example.FormsApp.Modules.Edit.EditDetailView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resolver="clr-namespace:Smart.Forms.Resolver;assembly=Smart.Forms"
             xmlns:edit="clr-namespace:Example.FormsApp.Modules.Edit;assembly=Example.FormsApp"
             xmlns:views="clr-namespace:Example.FormsApp.Views;assembly=Example.FormsApp"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type edit:EditDetailViewModel}}"
             resolver:BindingContextResolver.Type="{x:Type edit:EditDetailViewModel}"
             views:ShellProperty.Title="{Binding Update.Value, StringFormat='Edit-{0}', Converter={StaticResource EditModeConverter}}"
             views:ShellProperty.Function1Enabled="True" views:ShellProperty.Function1Text="&#xf107;"
             views:ShellProperty.Function4Enabled="{Binding Name.Value, Converter={StaticResource HasTextConverter}}" views:ShellProperty.Function4Text="&#xf122;">
    <StackLayout>
        <Entry Style="{StaticResource DefaultEntry}"
               Text="{Binding Name.Value}"/>
    </StackLayout>
</ContentView>