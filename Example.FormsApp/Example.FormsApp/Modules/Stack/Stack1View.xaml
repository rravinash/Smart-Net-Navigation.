<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Class="Example.FormsApp.Modules.Stack.Stack1View"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sr="clr-namespace:Smart.Forms.Resolver;assembly=Smart.Forms"
             xmlns:stack="clr-namespace:Example.FormsApp.Modules.Stack;assembly=Example.FormsApp"
             xmlns:markup="clr-namespace:Example.FormsApp.Markup;assembly=Example.FormsApp"
             xmlns:shell="clr-namespace:Example.FormsApp.Shell;assembly=Example.FormsApp"
             BindingContext="{Binding Source={x:Static stack:Stack1ViewModel.DesignInstance}}"
             sr:BindingContextResolver.Type="{x:Type stack:Stack1ViewModel}"
             shell:ShellProperty.Title="Stack1"
             shell:ShellProperty.Function1Enabled="True" shell:ShellProperty.Function1Text="◀️"
             shell:ShellProperty.Function4Enabled="True" shell:ShellProperty.Function4Text="+1">

    <StackLayout Style="{StaticResource PageStack}">
        <Button Text="Cancel" Style="{StaticResource NavigationButton}"
                Command="{Binding ForwardCommand}" CommandParameter="{markup:ViewId Menu}"/>
        <Button Text="Push" Style="{StaticResource NavigationButton}"
                Command="{Binding PushCommand}" CommandParameter="{markup:ViewId Stack2}"/>
    </StackLayout>

</ContentView>
